@model HomeViewModel
@{
    ViewData["Title"] = "You have not chosen a software product";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
        <h1 class="govuk-heading-l">You have not chosen a software product.</h1>
        <p class="govuk-body">Before you apply for financial discount, you will need to choose your software with Help to Grow: Digital. We will help you to compare and identify the best available software solution for your business' needs.</p>

        <a href="@Urls.GetComparisonToolUrl(Model.LearningPlatformUrl)" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start jsLink" data-module="govuk-button">
            Compare software
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>
        
        <a href="@Urls.GetComparisonToolNoJsUrl(Model.LearningPlatformUrl)" role="button" draggable="false" class="govuk-button govuk-!-margin-top-2 govuk-!-margin-bottom-8 govuk-button--start noJsLink" data-module="govuk-button" aria-hidden="true">
            Compare software
            <svg class="govuk-button__start-icon" xmlns="http://www.w3.org/2000/svg" width="17.5" height="19" viewBox="0 0 33 40" aria-hidden="true" focusable="false">
                <path fill="currentColor" d="M0 0h13l20 20-20 20H0l20-20z"></path>
            </svg>
        </a>

    </div>
</div>
