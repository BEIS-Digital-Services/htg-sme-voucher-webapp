@model EmailAddressViewModel
@{
  ViewData["Title"] = "What is your work email address?";
}
<div class="govuk-width-container">
  <nav class="govuk-!-margin-bottom-9">
    <a class="govuk-back-link govuk-!-margin-top-0 govuk-!-margin-bottom-0" href="/applicantrole">Back</a>
  </nav>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-two-thirds">
      <form class="form" asp-action="index" method="post">
        <partial name="_ValidationSummary" model="ViewData.ModelState" />
        <div class="govuk-form-group">
          <span class="govuk-caption-l">Section 3 of 4</span>
          <h1 class="govuk-label-wrapper">
            <label class="govuk-label govuk-label--l" for="email">
              What is your work email address?
            </label>
          </h1>
          <p class="govuk-body">If your application is successful, we will send your software discount link to this address.</p>
          <div id="email-hint" class="govuk-hint">Work email address</div>
          @if (!ViewData.ModelState.IsValid)
          {
            <span class="govuk-error-message">Enter an email address in the correct format, like name@example.com</span>
          }
          <input id="email" asp-for="@Model.EmailAddress" class="govuk-input govuk-!-width-three-quarters" type="text" spellcheck="false" aria-describedby="email-hint" autocomplete="email">
        </div>
        <button ga-data-action-id="btn-sme-work-email-continue" class="govuk-button work-email" data-module="govuk-button">Continue</button>
      </form>
    </div>
  </div>
</div>